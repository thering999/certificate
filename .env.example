# Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080/certificate

# Database
DB_HOST=mysql-docker
DB_PORT=3306
DB_NAME=certificate_db
DB_USER=root
DB_PASSWORD=123456
DB_USER_PASSWORD=certpass

# Redis Cache
REDIS_HOST=redis-cache
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email (SMTP) - Phase 3: Email System
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="Certificate System"
SMTP_ENCRYPTION=tls

# Email Features (Phase 3)
EMAIL_SEND_REGISTRATION=true
EMAIL_SEND_PASSWORD_RESET=true
EMAIL_SEND_CERTIFICATE_READY=true
EMAIL_SEND_BATCH_COMPLETE=true

# Mail Retry Configuration (Phase 3)
EMAIL_RETRY_COUNT=3
EMAIL_RETRY_DELAY=5

# API Keys
API_KEY_SECRET=your-random-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# PWA Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# File Storage
UPLOAD_MAX_SIZE=10485760
TEMP_DIR=/tmp

# Security
SESSION_LIFETIME=3600
CSRF_TOKEN_EXPIRY=3600
RATE_LIMIT_ATTEMPTS=100
RATE_LIMIT_DECAY=60

# External Services
GOOGLE_VISION_API_KEY=your-google-vision-api-key
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Logging
LOG_LEVEL=debug
LOG_FILE=/var/log/certificate.log

# Backup
BACKUP_DIR=./backup
BACKUP_RETENTION_DAYS=30

# Docker Ports
APP_PORT=8080
PMA_PORT=8081
